<div id="page">
	<!-- start ads -->
	<!-- div id="ads"><a href="#"><img src="images/ad160x600.gif" alt="" width="160" height="600" /></a></div -->
	<!-- end ads -->
	<!-- start content -->
	<div id="content">

		<div class="post">
			<div class="title">
				<h2><a href="#">Noticias</a></h2>
			</div>
			<div class="entry">
				<p>
					<li>
				<ul>
				<% for notice in @allnews %>
				    <li><a href="/informa/show?id=<%=h notice.id %>"><%=h notice.titulo %></a> - <%=notice.registro.to_s[6..7] %>/<%=notice.registro.to_s[4..5] %>/<%=notice.registro.to_s[0..3] %></li>
				<% end %>
				</ul>
			</li> 
				</p>	
			</div>
		</div>

		<div class="post">
			<div class="title">
				<h2><a href="#">Avisos</a></h2>
				
			</div>
			<div class="entry">
				<% for assoc in @avisos %>
				    <h3><%=h assoc.titulo %> :</h3> 
				    <blockquote>
					    <p>
					    &#8220;<%=h assoc.texto %>&#8221;<br>
					    <%=assoc.registro.to_s[6..7] %>/<%=assoc.registro.to_s[4..5] %>/<%=assoc.registro.to_s[0..3] %>
					    </p>
				    </blockquote>
				<% end %>
			</div>
		</div>
	</div>
	<!-- end content -->
	<!-- start sidebar -->
	<div id="sidebar">
		<ul>
			<li id="categories">
				<h2>Blogs</h2>
				<ul>
				<% for assoc in @blogs %>
				    <li><a href="/blog/comments?id=<%=h assoc.id %>"><%=h assoc.texto %></a> - <%=assoc.registro.to_s[6..7] %>/<%=assoc.registro.to_s[4..5] %>/<%=assoc.registro.to_s[0..3] %></li>
				<% end %>
				</ul>
			</li>
			<li>
				<h2>Not&iacute;cias</h2>
				<ul>
				<% for noticia in @noticias %>
				    <li><a href="/informa/show?id=<%=h noticia.id %>"><%=h noticia.titulo %></a> - <%=noticia.registro.to_s[6..7] %>/<%=noticia.registro.to_s[4..5] %>/<%=noticia.registro.to_s[0..3] %></li>
				<% end %>
				</ul>
			</li>
		
		</ul>
