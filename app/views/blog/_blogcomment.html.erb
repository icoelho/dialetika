<body>
<!-- start header -->
<div id="wrapper">
<div id="header">
	<div id="logo">
		<h1><a href="#">DialEtika</a></h1>
		<p><a href="http://www.freecsstemplates.org/">Profa. Criolina da Silva</a></p>
	</div>
</div>
<!-- end header -->
<!-- star menu -->
<div id="menu">
	<ul>
		<li><a href="/home/all">Inicial</a></li>
		<li class="current_page_item"><a href="/blog/all">Blogs</a></li>
		<li><a href="/informa/all">Not&iacute;cias</a></li>
		<li><a href="#">Aluno</a></li>
	</ul>
</div>
<!-- end menu -->
<!-- start page -->
<div id="page">
	<!-- start ads -->
	<!-- div id="ads"><a href="#"><img src="images/ad160x600.gif" alt="" width="160" height="600" /></a></div -->
	<!-- end ads -->
	<!-- start content -->
	<div id="content">


		<div class="post">
			<div class="title">
				<h3>Publicado em <%=@blogsmain.registro.to_s[6..7] %>/<%=@blogsmain.registro.to_s[4..5] %>/<%=@blogsmain.registro.to_s[0..3] %>  por <%=h @blogsmain.membro_nome %></h3>
				<p><strong>&#34;</strong> <small><%=h @blogsmain.texto %></small> <strong>&#34;</strong></p>

			</div>
		</div>
		<br> <br>	

		<% for blg in @blogs %>
		<div class="post">
			<div class="title">
				<p>>
					 <small>Comentado  em
					 <%=blg.registro.to_s[6..7] %>/<%=blg.registro.to_s[4..5] %>/<%=blg.registro.to_s[0..3] %> por <%=h blg.membro_nome %></small><br>
					 <strong>&#34;</strong> <%=h blg.texto %> <strong>&#34;</strong>
				</p>
			</div>
		</div>
		<% end %>
		

	</div>
	<!-- end content -->
	<!-- start sidebar -->
	<div id="sidebar">
		<ul>
			<li id="categories">
				<h2>Not&iacute;cias</h2>
				<ul>
				<% for noticia in @noticias %>
				    <li><a href="/informa/show?id=<%=h noticia.id %>"><%=h noticia.titulo %></a> -
				    <%=noticia.registro.to_s[6..7] %>/<%=noticia.registro.to_s[4..5] %>/<%=noticia.registro.to_s[0..3] %></li>
				<% end %>
				</ul>
			</li>
		
		</ul>
	</div>
	<!-- end sidebar -->
</div>
<!-- end page -->
